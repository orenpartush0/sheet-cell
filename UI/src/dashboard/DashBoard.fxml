<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.DashBoardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <MenuBar prefHeight="26.0" prefWidth="715.0">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#handleCreateNewSheet" text="New File" />
                    <MenuItem mnemonicParsing="false" onAction="#handleLoadFile" text="Load File" />
                </Menu>
            </MenuBar>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="10">
            <AnchorPane prefHeight="359.0" prefWidth="350.0">
               <children>
                      <Label layoutX="124.0" layoutY="4.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Available Sheet Table" />
                      <TableView fx:id="sheetsTable" layoutX="2.0" layoutY="32.0" prefHeight="222.0" prefWidth="400.0">
                          <columns>
                              <TableColumn fx:id="sheetNameColumn" prefWidth="100.800048828125" text="Sheet Name" />
                              <TableColumn fx:id="ownerColumn" text="Owner" />
                              <TableColumn fx:id="permissionCol" prefWidth="122.40003967285156" text="Permission Type" />
                              <TableColumn fx:id="sizeColumn" prefWidth="94.4000244140625" text="Size" />
                          </columns>
                      </TableView>
                       <Button fx:id="requestPermissionButton" layoutX="202.0" layoutY="310.0" prefHeight="25.0" prefWidth="126.0" text="Request Permission" />
                       <Button fx:id="viewSheetButton" layoutX="260.0" layoutY="277.0" prefHeight="25.0" prefWidth="74.0" text="View Sheet" />
                  <Label layoutX="82.0" layoutY="281.0" text="Selected Sheet: " />
                  <TextField fx:id="selectedSheet" editable="false" layoutX="170.0" layoutY="277.0" prefHeight="25.0" prefWidth="76.0" />
                  <ComboBox fx:id="permissionComboBox" disable="true" layoutX="82.0" layoutY="310.0" prefHeight="26.0" prefWidth="105.0" promptText="Permission" />
               </children>
            </AnchorPane>
            </VBox>

            <VBox alignment="CENTER" prefHeight="359.0" prefWidth="330.0">
                <Label prefHeight="20.0" prefWidth="194.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Request Permission Table">
                    <VBox.margin>
                        <Insets bottom="12.0" />
                    </VBox.margin></Label>
                <AnchorPane prefHeight="0.0" prefWidth="254.0" />
                <TableView fx:id="requestTable" layoutX="200.0" prefHeight="183.0" prefWidth="466.0">
                    <columns>
                        <TableColumn fx:id="reqIdColumn" text="ID"/>
                        <TableColumn fx:id="userColumn" text="User" />
                        <TableColumn fx:id="permissionColumn" text="Permission" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>
                    <VBox.margin>
                        <Insets left="10.0" right="3.0" />
                    </VBox.margin>
                </TableView>
                <AnchorPane prefHeight="142.0" prefWidth="408.0">
                    <Button fx:id="acceptPermissionButton" layoutX="51.0" layoutY="13.0" prefHeight="26.0" prefWidth="113.0" text="Accept Permission" />
                    <Button fx:id="denyPermissionButton" layoutX="187.0" layoutY="13.0" prefHeight="26.0" prefWidth="113.0" text="Deny Permission" />
                </AnchorPane>
            </VBox>
        </HBox>
    </center>
   <bottom>
       <HBox prefHeight="2.0" prefWidth="575.0" BorderPane.alignment="CENTER">
           <Label text="Welcome, " />
           <Label fx:id="userNameLabel" prefHeight="18.0" prefWidth="107.0" />
       </HBox>
   </bottom>

</BorderPane>
